{
  "info": {
    "_postman_id": "3157a2fe-95ba-4441-a8c8-4c5eeb90e352",
    "name": "RAG Chat Storage API",
    "description": "Complete API collection for the RAG Chat Storage microservice. All requests require the `X-API-Key` header (set in collection variables).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "15742747"
  },
  "item": [
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"title\": \"My first chat\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sessions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions"
              ]
            },
            "description": "Create a new chat session. Returns the created session (copy `id` to use as sessionId for messages)."
          },
          "response": []
        },
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions?userId={{userId}}&favorite=&page=0&size=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}",
                  "description": "Required. User identifier."
                },
                {
                  "key": "favorite",
                  "value": "",
                  "description": "Optional. true/false to filter by favorite."
                },
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number (0-based)."
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size."
                }
              ]
            },
            "description": "List chat sessions for a user. Optionally filter by favorite and paginate."
          },
          "response": []
        },
        {
          "name": "Get Session",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}?userId={{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions",
                "{{sessionId}}"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            },
            "description": "Get a single session by ID. Set collection variable `sessionId` to the session UUID."
          },
          "response": []
        },
        {
          "name": "Update Session (rename / favorite)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated chat title\",\n  \"favorite\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}?userId={{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions",
                "{{sessionId}}"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            },
            "description": "Rename session and/or set favorite. Send only the fields you want to update."
          },
          "response": []
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}?userId={{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions",
                "{{sessionId}}"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            },
            "description": "Delete a session and all its messages. Returns 204 No Content."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Add Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sender\": \"USER\",\n  \"content\": \"What is RAG?\",\n  \"context\": \"Optional RAG retrieved context (e.g. document snippets)\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}/messages?userId={{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions",
                "{{sessionId}}",
                "messages"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            },
            "description": "Add a message to a session. sender must be USER or ASSISTANT. context is optional (for RAG context)."
          },
          "response": []
        },
        {
          "name": "Get Message History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}/messages?userId={{userId}}&page=0&size=50",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "sessions",
                "{{sessionId}}",
                "messages"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number (0-based)."
                },
                {
                  "key": "size",
                  "value": "50",
                  "description": "Page size."
                }
              ]
            },
            "description": "Get paginated message history for a session, ordered by creation time."
          },
          "response": []
        }
      ]
    },
    {
